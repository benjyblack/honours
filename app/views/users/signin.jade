extends auth

block auth
  .row
    .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Please Sign In
          .panel-body
            form(role='form', action="/users/session", method="post")
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='email', type='email', autofocus='autofocus')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                // Change this to a button or input when using this as a form 
                button.btn.btn-lg.btn-success.btn-block(type='submit') Login