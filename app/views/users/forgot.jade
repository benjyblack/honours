extends auth

block auth
  .row
    .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Enter Email Address
          .panel-body
            form(role='form', action="/forgot", method="post")
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='email', type='email', autofocus='autofocus')
                // Change this to a button or input when using this as a form 
                button.btn.btn-lg.btn-success.btn-block(type='submit') Send Password Reset Email