extends auth

block auth
  .row
    .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Reset Password
          .panel-body
            form(role='form', method='post', action='/reset/#{token}')
              fieldset
                .form-group
                  input.form-control(placeholder='New password...', name='password', type='password', autofocus='autofocus')
                .form-group
                  input.form-control(placeholder='Confirm new password...', name='confirm', type='password', value='')
                button.btn.btn-lg.btn-success.btn-block(type='submit') Reset Password